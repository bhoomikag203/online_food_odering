<div class="page_content">
	<div class="header"><h2 style="font-family: Georgia">PENDING &nbsp; PAYMENTS</h2></div>
	<div class="container">
		<div class="table-responsive">     
	  	 <table class="table table-hover">
	    	<thead>
	      		<tr>
	      			<th>ID</th>
	      			<th>Order ID</th>
		        	<th>Customer Name</th>
		        	<th>Payment Type</th>
		        	<th>Payment Status</th>
		        </tr>
	    	</thead>
	   		<% @payments.each do |p| %>
		    <tbody>
		    	<tr>
		    		<td><%= p.id %></td>
		    		<td><%= p.order_id %></td>
		    		<td><%= link_to p.order.customer.name.capitalize, {:controller => 'orders', :action =>'show' ,:id => p.order_id} %></td>
		    		<td><%= p.payment_type %></td>
		    		<td><%= p.status %></td>
 			    </tr> 
			 </tbody>
		    <% end %>
		 </table>
		</div>
	</div>
	<div class="container">
	<%= will_paginate %> 
	</div>
</div>
</div>