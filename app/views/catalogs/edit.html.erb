<div class="container">
  <div class="jumbotron">
    <div class="well"><center><h2>Add Food Item</h2></center></div>
    <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@catalog) do |f| %>
    
    <div class="form-group">
      <%= f.label :item_name  %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

   <div class="form-group">
      <%= f.label :price  %>
      <%= f.number_field :price, class: 'form-control' %>
    </div>

      <div class="form-group">
      <%= f.submit "save changes", class: "btn btn-primary", :onclick =>"alert('Item Updated..!')" %>
    </div>

    <% end %>
  </div>
</div>
</div>
</div>
